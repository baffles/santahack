extends layout

block additionalCSS
	:less
		#news
		{
			margin-top: 1em;
		}
	
		div.news-item
		{
			border-bottom: solid 1px #CCC;
			margin-bottom: 1em;
			padding: 0 1em 0 1em;
			
			h3
			{
				margin: 0;
			}
			
			span.date
			{
				padding-left: 1em;
				font-weight: bold;
			}
		}

mixin newsPost(post)
	.news-item
		h3= post.title
		span.date(title=utcDate(post.date)) Posted #{friendlyDate(post.date)}
		span!= markdown(post.content)

block content
	h2 News #{year}
	#news
		- each post in posts
			mixin newsPost(post)