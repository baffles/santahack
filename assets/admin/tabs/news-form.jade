.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='label', aria-hidden='true')
	.modal-header
		button.close(data-dismiss='modal', aria-hidden='true') &times;
		h3#label Add/Edit News Post
	.modal-body
		#alertContainer
			#validationAlert.alert.alert-error.hide
				button.close(type='button') &times;</button>
				span
					strong Uh oh...</strong> 
					| please double check everything on the form!
		form#editNewsForm.form-horizontal
			fieldset
				.control-group
					label.control-label(for='newsDate') Date
					.controls
						input#newsDate.input-medium.date(type='text', placeholder='Post Date', data-type='date')
						span.help-inline
				.control-group
					label.control-label(for='newsTitle') Title
					.controls
						input#newsTitle.input-medium(type='text', placeholder='Post Title')
						span.help-inline
				.control-group
					label.control-label(for='newsPost') Post
					.controls: textarea#newsPost.input-xlarge(rows='10', placeholder='News Post')
	.modal-footer
		button.btn(data-dismiss='modal', aria-hidden='true') Close
		button#saveButton.btn.btn-primary(data-saving-text='Saving...', data-saved-text='Saved!', autocomplete='off') Save
