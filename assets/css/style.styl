body
	font-family verdana
	color #555
	
	background-color #fff
	background-image url("/static/images/santahack_header_bg_2.png")
	background-repeat repeat-x
	background-position top
	background-attachment scroll

a
	color darkred
	font-family Times
	xxxtext-transform uppercase
	text-shadow 0 1px 0 gold

#header
	background transparent
	height 100px
	padding 20px
	
	h1
		margin auto
		width 442px
		height 106px
		line-height 1200px
		overflow hidden
		background-image url('/static/images/santahack_byline.png')

#container
	margin 0 auto
	width 800px
	
	#alertContainer
		margin-top 50px

#user
	float right
	clear right
	
	padding 0
	padding-top 20px
	margin-top -20px
	
	#avatar
		float left
		width 22px
		height 22px
		padding-right 5px
	
	#usertext
		line-height 22px
		color #555
		padding-right 5px
		
		a
			color #555
			text-decoration none
	
	#useraction
		line-height 22px
		color #888
		
		a
			color#F03036
			text-decoration none
		
		a:hover
			text-decoration underline

#time
	float right
	clear right
	padding 0
	padding-top 5px
	color #777
	font-size 75%

#navigation
	float left
	width 100%
	background#333
	margin-top 5px
	margin-bottom 20px
	border 3px solid white
	box-shadow 0 6px 10px black
	
	ul
		margin 0
		padding 0
		
		li
			list-style-type none
			display inline
			
			a
				font-family Times
				text-transform uppercase
				text-shadow 0 1px 0 gold
				display block
				float left
				padding 5px 10px
				color#fff
				text-decoration none
				border-right 1px solid #fff
			
			a:hover
				background #093701

#content
	padding 20px
	//margin-top 20px
	clear left
	
	h2, h3, h4, h5
		font-family Georgia, Times
	
	h2
		color #a33
		font-weight normal
		font-size 40px
		text-shadow 0 1px 0 #fff, 0 2px 2px #999
		margin 0 0 .5em
	
	h3
		color #363
		font-weight normal
		font-size 30px
		text-shadow 0 1px 0 #fff, 0 2px 2px #999
	
	ul
		li
			margin 10px 0 0 0


#footer
	color white
	background-color #073769
	text-align right
	font-size 85%
	padding 5px
	
	a
		color burlywood
		text-decoration none
		text-shadow none
	
	a:hover
		text-decoration underline
